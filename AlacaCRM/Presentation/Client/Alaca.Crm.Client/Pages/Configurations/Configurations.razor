@page "/Configurations"

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Parametreler</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Add" Color="MudBlazor.Color.Success" @onclick="New" Class="ml-auto" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <DataGrid TItem="Configuration" Data="ConfigurationList" Filterable="true" ShowPager="true" PageSize="10" 
                  Class="table table-striped table-bordered table-hover"
                  RowClicked="@(e=>RowClick(e.Item))">
            <DataGridColumns>
                <DataGridColumn TItem="Configuration" Field="@nameof(Configuration.ConfigurationCode)" Caption="Kod" Editable="true" />
                <DataGridColumn TItem="Configuration" Field="@nameof(Configuration.ConfigurationValue)" Caption="Değer" Editable="true" />
                <DataGridColumn TItem="Configuration" Field="@nameof(Configuration.ConfigurationDescription)" Caption="Açıklama" Editable="true" />
            </DataGridColumns>
        </DataGrid>
    </MudCardContent>
</MudCard>
<Blazorise.Modal @ref="modalRef">
    <Blazorise.ModalContent Centered="true">
        <Blazorise.ModalHeader>
            <Blazorise.ModalTitle>Para Birimi</Blazorise.ModalTitle>
            <Blazorise.CloseButton />
        </Blazorise.ModalHeader>
        <EditForm Model="@configuration" OnValidSubmit="()=>OnValidSubmit()">
            <Blazorise.ModalBody>
                <FluentValidationValidator @ref="_fluentValidationValidator" />
            </Blazorise.ModalBody>
            <Blazorise.ModalFooter>
            </Blazorise.ModalFooter>
        </EditForm>
    </Blazorise.ModalContent>
</Blazorise.Modal>
