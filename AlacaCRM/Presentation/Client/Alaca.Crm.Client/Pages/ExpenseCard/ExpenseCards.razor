@page "/ExpenseCards"
<MudCard>
    <MudCardHeader>
        <CardHeaderContent>MASRAF KARTLARI</CardHeaderContent>
        <CardHeaderActions>
            <!--<MudIconButton Icon="@Icons.Material.Filled.Add" Color="MudBlazor.Color.Success" @onclick="NewExpenseCard" Class="ml-auto" />-->
            <MudIconButton Icon="@Icons.Material.Filled.AddBox" Color="MudBlazor.Color.Success" @onclick="NewExpenseCard" Class="ml-auto" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <DataGrid TItem="ExpenseCard" Data="expenseCards"
                  Filterable="true" PageSize="10" ShowPager="true"
                  Hoverable="true"
                  Responsive="true"
                  Class="table table-striped table-bordered table-hover" RowClicked="@(e=>RowClick(e.Item))" SortMode="DataGridSortMode.Single">
            <DataGridColumns>
                <DataGridColumn TItem="ExpenseCard" Field="@nameof(ExpenseCard.ExpenseCardCode)" Caption="Masraf Kodu"></DataGridColumn>
                <DataGridColumn TItem="ExpenseCard" Field="@nameof(ExpenseCard.ExpenseCardName)" Caption="Masraf Adı"></DataGridColumn>
                <DataGridColumn TItem="ExpenseCard" Field="@nameof(ExpenseCard.Description)" Caption="Masraf Açıklaması"></DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </MudCardContent>
</MudCard>