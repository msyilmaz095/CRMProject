<EditForm Model="projectMilestoneType" OnValidSubmit="Save">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                Proje Süreç Türü
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem sm="12" md="12" xs="12">
                    <MudSelect Margin="Margin.Dense" Label="Durum" T="bool" @bind-Value="projectMilestoneType.IsActive">
                        <MudSelectItem T="bool" Value="true">Aktif</MudSelectItem>
                        <MudSelectItem T="bool" Value="false">Pasif</MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem sm="12" md="12" xs="12">
                    <MudTextField Label="Proje Süreç Türü" @bind-Value="projectMilestoneType.ProjectMilestoneTypeName" For="()=>projectMilestoneType.ProjectMilestoneTypeName"></MudTextField>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            @if (projectMilestoneType.ProjectMilestoneTypeId != 0)
            {
                <MudIconButton Color="MudBlazor.Color.Warning" Icon="@MudBlazor.Icons.Filled.Delete" OnClick="Delete">Sil</MudIconButton>
            }
            <MudIconButton Icon="@MudBlazor.Icons.Filled.Save" Color="MudBlazor.Color.Primary" ButtonType="MudBlazor.ButtonType.Submit">Kaydet</MudIconButton>
        </DialogActions>
    </MudDialog>
</EditForm>