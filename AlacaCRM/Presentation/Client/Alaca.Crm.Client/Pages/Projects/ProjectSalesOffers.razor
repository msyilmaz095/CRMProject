<MudCard>
    <MudCardContent>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="MudBlazor.Color.Success" @onclick="NewSalesOffer" Class="ml-auto" FullWidth="true">Yeni Teklif</MudButton>
        <DataGrid TItem="viewSalesOffer" Data="salesOffers"
                  Filterable="true" PageSize="10" ShowPager="true"
                  Hoverable="true"
                  Responsive="true"
                  Class="table table-striped table-bordered table-hover" RowClicked="@(e=>RowClick(e.Item))" SortMode="DataGridSortMode.Single">
            <DataGridColumns>
                <DataGridColumn TItem="viewSalesOffer" Field="@nameof(viewSalesOffer.SalesOfferNumber)" Caption="Teklif No"></DataGridColumn>
                <DataGridDateColumn DisplayFormat="{0:dd.MM.yyyy}" TItem="viewSalesOffer" Field="@nameof(viewSalesOffer.SalesOfferDate)" Caption="Teklif Tarihi" Direction="Blazorise.SortDirection.Descending"></DataGridDateColumn>
                <DataGridColumn TItem="viewSalesOffer" Field="@nameof(viewSalesOffer.CustomerName)" Caption="Müşteri Adı"></DataGridColumn>
                <DataGridColumn TItem="viewSalesOffer" Field="@nameof(viewSalesOffer.CustomerContactName)" Caption="Müşteri Yetkilisi"></DataGridColumn>
                <DataGridColumn TItem="viewSalesOffer" Field="@nameof(viewSalesOffer.AssignedToName)" Caption="Temsilci"></DataGridColumn>
                <DataGridColumn TItem="viewSalesOffer" Field="@nameof(viewSalesOffer.PaymentMethodName)" Caption="Ödeme Şekli"></DataGridColumn>
                <DataGridColumn TItem="viewSalesOffer" Field="@nameof(viewSalesOffer.CurrencyName)" Caption="Para Birimi"></DataGridColumn>
                <DataGridColumn TItem="viewSalesOffer" Field="@nameof(viewSalesOffer.SalesOfferTotal)" Caption="Total">
                    <DisplayTemplate>
                        @string.Format("{0:n2}", context.SalesOfferTotal)
                    </DisplayTemplate>
                </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </MudCardContent>
</MudCard>