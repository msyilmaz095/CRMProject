@page "/AddEditWorkTaskTypes/{WorkTaskTypeId:guid}"
<MudCard>
    @if (_mudDialog == null)
    {
        <MudCardHeader>
            <CardHeaderContent>
                @{
                    if (WorkTaskTypeId == Guid.Empty)
                    {
                        <MudText Typo="Typo.h6">
                            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                            İş Emri Kaydı
                        </MudText>
                    }
                    else
                    {
                        <MudText Typo="Typo.h6">
                            <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                            İş Emri Düzeltme
                        </MudText>
                    }
                }
            </CardHeaderContent>
            <CardHeaderActions>
            </CardHeaderActions>
        </MudCardHeader>
    }
    <EditForm Model="workTaskType" OnValidSubmit="OnValidSubmit">
        <FluentValidationValidator @ref="_fluentValidationValidator" />
        <MudCardContent>
            <MudGrid>
                <MudItem md="6" sm="12" xs="12">
                    <MudTextField Label="İş Emri Başlığı" @bind-Text="workTaskType.WorkTaskTypeName" T="string" For="()=>workTaskType.WorkTaskTypeName"></MudTextField>
                </MudItem>
                <MudItem md="6" sm="12" xs="12">
                    <MudTextField Label="İş Emri Başlığı" @bind-Text="workTaskType.Description" T="string" For="()=>workTaskType.Description"></MudTextField>
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudIconButton Icon="@Icons.Material.Filled.Close" Color="MudBlazor.Color.Error" @onclick="Cancel" Class="mr-auto p-2" />
            @if (workTaskType.WorkTaskTypeId != Guid.Empty)
            {
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="MudBlazor.Color.Warning" @onclick="Delete" Class="p-2" />
            }
            <MudIconButton Icon="@Icons.Material.Filled.Save" Color="MudBlazor.Color.Success" Class="p-2" ButtonType="MudBlazor.ButtonType.Submit" />
        </MudCardActions>
    </EditForm>
</MudCard>
